{
  "name": "npm-quick",
  "publisher": "dvigo",
  "displayName": "npm quick",
  "description": "Discover and run npm/pnpm/yarn scripts instantly from the Command Palette. Save time and boost productivity.",
  "version": "0.1.0",
  "icon": "icon.png",
  "author": "David Vigo",
  "license": "MIT",
  "homepage": "https://github.com/dvigo/npm-quick",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvigo/npm-quick"
  },
  "bugs": {
    "url": "https://github.com/dvigo/npm-quick/issues"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "npm",
    "pnpm",
    "yarn",
    "scripts",
    "tasks",
    "productivity",
    "automation",
    "command-palette",
    "package-manager"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "npm-quick-scripts",
          "title": "npm quick",
          "icon": "$(play)"
        }
      ]
    },
    "views": {
      "npm-quick-scripts": [
        {
          "id": "npm-quick.scriptsView",
          "name": "Scripts",
          "when": "workspaceFolderCount > 0"
        },
        {
          "id": "npm-quick.outputView",
          "name": "Output",
          "when": "workspaceFolderCount > 0",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "npm-quick.runScript",
        "title": "npm quick: Run Script"
      },
      {
        "command": "npm-quick.executeScript",
        "title": "Run",
        "icon": "$(play)"
      },
      {
        "command": "npm-quick.refreshScripts",
        "title": "Refresh Scripts",
        "icon": "$(refresh)"
      },
      {
        "command": "npm-quick.addScript",
        "title": "Add Script",
        "icon": "$(add)"
      },
      {
        "command": "npm-quick.clearHistory",
        "title": "Clear History",
        "icon": "$(clear-all)"
      },
      {
        "command": "npm-quick.removeHistoryItem",
        "title": "Remove from History",
        "icon": "$(trash)"
      },
      {
        "command": "npm-quick.viewScriptOutput",
        "title": "View Output"
      },
      {
        "command": "npm-quick.stopScript",
        "title": "Stop Script",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "npm-quick.addScript",
          "group": "navigation@1",
          "when": "view == npm-quick.scriptsView"
        },
        {
          "command": "npm-quick.clearHistory",
          "group": "navigation@2",
          "when": "view == npm-quick.scriptsView"
        }
      ],
      "view/item/context": [
        {
          "command": "npm-quick.stopScript",
          "group": "inline@1",
          "when": "view == npm-quick.scriptsView && viewItem == script-running"
        },
        {
          "command": "npm-quick.removeHistoryItem",
          "group": "inline@2",
          "when": "view == npm-quick.scriptsView && viewItem == script-history"
        }
      ]
    },
    "keybindings": [
      {
        "command": "npm-quick.runScript",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
